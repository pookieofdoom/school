#include <stdio.h>
#include <string.h>

#define NUM_SIZE 100
#define DIGIT_ONE '1'
#define DIGIT_ZERO '0'

void TwosComplement(char *number) {
   while(*number) {

     *number == DIGIT_ONE ? DIGIT_ZERO : DIGIT_ONE;
     ++*number = *number;

      }
   
   if (*--number == DIGIT_ONE)
    {
        while (*number != DIGIT_ZERO)
        {
            (*number--)--;
        }
        (*number)++;
    }
    else
    {
        (*number)++;
    }
}


int main() {
   char number[100];
   
   while (EOF != scanf("%99s", number)) {
      TwosComplement(number);
      printf("%s\n", number);
   }

   return 0;
}
